{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/aaut0001/FIT3179_W10/main/top_countries_dataset.csv"
    },
    "facet": {
        "column": {
            "field": "Continents",
            "type": "ordinal",
            "header": {
                "labelAngle": 0
            }
        }
    },
    "spec": {
        "mark": "bar",
        "encoding": {
            "x": {
                "field": "Country Name (Total Flights)",
                "type": "ordinal",
                "title": "Country"
            },
            "y": {
                "field": "Total Flights",
                "type": "quantitative",
                "title": "Total Flights"
            },
            "color": {
                "field": "Rank",
                "type": "ordinal",
                "title": "Rank",
                "scale": {
                    "domain": [
                        1,
                        2,
                        3
                    ],
                    "range": [
                        "#1f77b4",
                        "#ff7f0e",
                        "#2ca02c"
                    ]
                }
            },
            "tooltip": [
                {
                    "field": "Country Name (Total Flights)",
                    "type": "nominal",
                    "title": "Country"
                },
                {
                    "field": "Total Flights",
                    "type": "quantitative",
                    "title": "Total Flights"
                }
            ]
        }
    },
    "config": {
        "view": {
            "stroke": "aqua"
        }
    },
    "width": 400,
    "height": 200
}