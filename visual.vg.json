{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/aaut0001/FIT3179_W10/main/modified_airline.csv"
  },
  "width": 680,
  "height": 400,
  "title": "Top Ten Countries by Flights (2022)",
  "mark": {
    "type": "bar",
    "smooth": true,
    "cornerRadiusTopLeft": 3,
    "cornerRadiusTopRight": 3
  },
  "transform": [
    {
      "timeUnit": "yearmonthdate", 
      "type": "temporal",
      "field": "Departure Date",
      "as": "yearmonthdate"
    },
    {
      "aggregate": [
        {
          "op": "count", 
          "as": "Flight Count"
        }
      ],
      "groupby": ["Month Name", "Country Name"]
    },
    {
      "filter": {
        "field": "Flight Count",
        "range": [100, 1100]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Month Name",
      "type": "nominal", 
      "sort": [
        "January",
        "February", 
        "March",
        "April", 
        "May", 
        "June", 
        "July",
        "August", 
        "September", 
        "October",
        "November",
        "December"
      ],
      "axis": {
        "title": "Month", 
        "labelAngle": 45
      }
    },
    "y": {
      "aggregate": "sum", 
      "field": "Flight Count", 
      "type": "quantitative", 
      "axis": {
        "title": "Number of Flights"
      }
    },
    "color": {
      "field": "Country Name", 
      "type": "nominal", 
      "scale": {
        "domain": [
          "Australia", 
          "Brazil", 
          "Canada", 
          "China", 
          "France", 
          "India", 
          "Indonesia",
          "Russian Federation",
          "United Kingdom",
          "United States"
        ],
        "range": [
          "#d55e20",
          "#cc797a",
          "#0072b2",
          "#f0e442",
          "#009e13",
          "#001158",
          "#008060",
          "#48202a",
          "#ed7d11",
          "#a64d79"
        ]
      },
      "legend": {
        "title": "Country"
      }
    },
    "tooltip": [
      {
        "field": "Month Name", 
        "title": "Month"
      },
      {
        "field": "Flight Count",
        "title": "Total Flights"
      }, 
      {
        "field": "Country Name",
        "type": "nominal",
        "title": "Country"
      }
    ]
  }
}