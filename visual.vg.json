{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/aaut0001/FIT3179_W10/main/modified_airline.csv"
  },
  "vconcat": [
    {
      "width": 600,
      "height": 400,
      "mark": "bar",
      "selection": {
        "brush": {"type": "interval", "encodings": ["x"]}
      },
      "encoding": {
        "x": {
          "field": "Month Name",
          "type": "ordinal",
          "title": "Month of Departure",
          "sort": [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
          ]
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "title": "Number of Flights"
        },
        "color": {
          "field": "Continents",
          "type": "nominal",
          "title": "Continent",
          "legend": {"title": "Continents"}
        },
        "tooltip": [
          {
            "field": "Month Name",
            "type": "nominal",
            "title": "Month of Departure"
          },
          {
            "field": "Continents",
            "title": "Continent"
          },
          {
            "field": "count()",
            "type": "quantitative",
            "title": "Flights per Continent",
            "aggregate": "count",
            "groupby": [
              "Continents"
            ]
          }
        ]
      }
    },
    {
      "width": 600,
      "height": 200,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Month Name",
          "type": "ordinal",
          "title": "Month of Departure",
          "sort": [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
          ]
        },
        "y": {
          "aggregate": "sum",
          "type": "quantitative",
          "title": "Total Number of Flights"
        },
        "color": {
          "field": "Continents",
          "type": "nominal",
          "title": "Continent",
          "legend": {"title": "Continents"}
        },
        "tooltip": [
          {
            "field": "Month Name",
            "type": "nominal",
            "title": "Month of Departure"
          },
          {
            "field": "Continents",
            "title": "Continent"
          },
          {
            "field": "sum(count())",
            "type": "quantitative",
            "title": "Total Flights",
            "aggregate": "sum",
            "groupby": [
              "Month Name",
              "Continents"
            ]
          }
        ],
        "transform": [
          {
            "filter": {"selection": "brush"}
          }
        ]
      }
    }
  ]
}
