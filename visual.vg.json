{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/aaut0001/FIT3179_W10/main/modified_airline.csv"
  },
  "width": 680,
  "height": 400,
  "mark": "bar",
  "transform": [
    {
      "timeUnit": "month", 
      "field": "Departure Date",
      "as": "Month"
    },
    {
      "aggregate": [
        {
          "op": "count", 
          "as": "Flight Count"
        }
      ],
      "groupby": ["Month Name", "Continents"]
    }
  ],
  "encoding": {
    "x": {
      "field": "Month Name",
      "type": "nominal", 
      "axis": {
        "title": "Month", 
        "labelAngle": 45
      }
    },
    "y": {
      "aggregate": "sum", 
      "field": "Flight Count", 
      "type": "quantitative", 
      "axis": {
        "title": "Number of Flights"
      }
    },
    "color": {
      "field": "Continents", 
      "type": "nominal", 
      "scale": {
        "scheme": "tableau10"
      },
      "legend": {
        "title": "Continent"
      }
    },
    "tooltip": [
      {
        "field": "Month Name", 
        "title": "Month"
      },
      {
        "field": "Flight Count",
        "title": "Total Flights"
      }
    ]
  }
}