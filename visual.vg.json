{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/aaut0001/FIT3179_W10/main/airline.csv"
  },
  "transform": [
    {
      "timeUnit": "month",
      "field": "Departure Date",
      "as": "Month of Departure"
    },
    {
      "calculate": "timeFormat(datum['Month of Departure'], '%B')",
      "as": "Month Name"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Month Name",
      "type": "ordinal",
      "title": "Month of Departure",
      "sort": [
        "January", "February", "March", "April", "May", "June", 
        "July", "August", "September", "October", "November", "December"
      ]
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Number of Flights"
    },
    "color": {
      "field": "Continents",
      "type": "nominal",
      "title": "Continent"
    },
    "tooltip": [                
      {"field": "Month Name", "type": "nominal", "title": "Month of Departure"},
      {"field": "Continents", "title": "Continent"},
      {"field": "count()", "type": "quantitative", "title": "Flights per Continent", "aggregate": "count", "groupby": ["Continents"]}
    ]
  },
  "width": 800,
  "height": 400
}
