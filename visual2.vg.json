{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "(Figure 1) Most Common & Frequent Airports (2022)",
    "background": "beige",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/aaut0001/FIT3179_A2/main/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "darkgray",
                "fillOpacity": 0.8,
                "stroke": "white"
            }
        }, 
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightblue",
                "stroke": "black"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
                "format": { "type": "topojson", "feature": "ne_110m_graticules_30"}
            }, 
            "mark": {"type": "geoshape", "fill": null, "stroke": "black"}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/aaut0001/FIT3179_A2/main/airport_info.csv"
            },
            "mark": {
                "type": "circle",
                "color": "#eb000c"
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Frequency",
                    "type": "quantitative",
                    "scale": {
                        "domain": [17, 100, 130]
                    }
                },
                "tooltip": [
                    {
                        "field": "Airport Name",
                        "type": "nominal",
                        "title": "Airport Name"
                    },
                    {
                        "field": "Frequency",
                        "type": "quantitative",
                        "title": "Frequency"
                    },
                    {
                        "field": "Latitude",
                        "title": "Latitude"
                    },
                    {
                        "field": "Longitude",
                        "title": "Longitude"
                    }
                ]
            }
        }
    ]
}